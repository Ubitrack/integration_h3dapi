# - Find HAPTIONHAPI
# Find the native HAPTIONHAPI headers and libraries.
#
#  HAPTIONHAPI_INCLUDE_DIR -  where to find HaptionHAPI/HaptionHAPI.hh, etc.
#  HAPTIONHAPI_LIBRARIES    - List of libraries when using HAPTIONHAPI.
#  HAPTIONHAPI_FOUND        - True if HAPTIONHAPI found.

GET_FILENAME_COMPONENT(module_file_path ${CMAKE_CURRENT_LIST_FILE} PATH )

# Look for the header file.
FIND_PATH( HAPTIONHAPI_INCLUDE_DIR NAMES HaptionHAPI/HaptionHAPI.h
           PATHS $ENV{H3D_ROOT}/include
                 ../include
                 ${module_file_path}/../../include
                 ${module_file_path}/../../../HaptionHAPI/include
           DOC "Path in which the file HaptionHAPI/HaptionHAPI.h is located." )
MARK_AS_ADVANCED(HAPTIONHAPI_INCLUDE_DIR)

IF( MSVC )
  SET( H3D_MSVC_VERSION 6 )
  SET( TEMP_MSVC_VERSION 1299 )
  WHILE( ${MSVC_VERSION} GREATER ${TEMP_MSVC_VERSION} )
    MATH( EXPR H3D_MSVC_VERSION "${H3D_MSVC_VERSION} + 1" )
    MATH( EXPR TEMP_MSVC_VERSION "${TEMP_MSVC_VERSION} + 100" )
  ENDWHILE( ${MSVC_VERSION} GREATER ${TEMP_MSVC_VERSION} )
  SET( HAPTIONHAPI_NAME "HaptionHAPI_vc${H3D_MSVC_VERSION}" )
ELSE(MSVC)
  SET( HAPTIONHAPI_NAME h3dhaptionhapi )
ENDIF( MSVC )

SET( DEFAULT_LIB_INSTALL "lib" )
IF( WIN32 )
  SET( DEFAULT_LIB_INSTALL "lib32" )
  IF( CMAKE_SIZEOF_VOID_P EQUAL 8 )
    SET( DEFAULT_LIB_INSTALL "lib64" )
  ENDIF( CMAKE_SIZEOF_VOID_P EQUAL 8 )
ENDIF( WIN32 )

# Look for the library.
FIND_LIBRARY( HAPTIONHAPI_LIBRARY NAMES ${HAPTIONHAPI_NAME}
              PATHS $ENV{H3D_ROOT}/../${DEFAULT_LIB_INSTALL}
                    ../../${DEFAULT_LIB_INSTALL}
                    ${module_file_path}/../../../${DEFAULT_LIB_INSTALL}
              DOC "Path to ${HAPTIONHAPI_NAME} library." )

FIND_LIBRARY( HAPTIONHAPI_DEBUG_LIBRARY NAMES ${HAPTIONHAPI_NAME}_d
              PATHS $ENV{H3D_ROOT}/../${DEFAULT_LIB_INSTALL}
                    ../../${DEFAULT_LIB_INSTALL}
                    ${module_file_path}/../../../${DEFAULT_LIB_INSTALL}
              DOC "Path to ${HAPTIONHAPI_NAME}_d library." )
MARK_AS_ADVANCED(HAPTIONHAPI_LIBRARY)
MARK_AS_ADVANCED(HAPTIONHAPI_DEBUG_LIBRARY)

IF(HAPTIONHAPI_LIBRARY OR HAPTIONHAPI_DEBUG_LIBRARY)
  SET( HAVE_HAPTIONHAPI_LIBRARY 1 )
ELSE(HAPTIONHAPI_LIBRARY OR HAPTIONHAPI_DEBUG_LIBRARY)
  SET( HAVE_HAPTIONHAPI_LIBRARY 0 )
ENDIF(HAPTIONHAPI_LIBRARY OR HAPTIONHAPI_DEBUG_LIBRARY)

# Copy the results to the output variables.
IF(HAPTIONHAPI_INCLUDE_DIR AND HAVE_HAPTIONHAPI_LIBRARY)

  SET(HAPTIONHAPI_FOUND 1)
  IF(HAPTIONHAPI_LIBRARY)
    SET(HAPTIONHAPI_LIBRARIES ${HAPTIONHAPI_LIBRARIES} optimized ${HAPTIONHAPI_LIBRARY} )
  ELSE(HAPTIONHAPI_LIBRARY)
    SET(HAPTIONHAPI_LIBRARIES ${HAPTIONHAPI_LIBRARIES} optimized ${HAPTIONHAPI_NAME} )
    MESSAGE( STATUS "HAPTIONHAPI release libraries not found. Release build might not work." )
  ENDIF(HAPTIONHAPI_LIBRARY)

  IF(HAPTIONHAPI_DEBUG_LIBRARY)
    SET(HAPTIONHAPI_LIBRARIES ${HAPTIONHAPI_LIBRARIES} debug ${HAPTIONHAPI_DEBUG_LIBRARY} )
  ELSE(HAPTIONHAPI_DEBUG_LIBRARY)
    SET(HAPTIONHAPI_LIBRARIES ${HAPTIONHAPI_LIBRARIES} debug ${HAPTIONHAPI_NAME}_d )
    MESSAGE( STATUS "HAPTIONHAPI debug libraries not found. Debug build might not work." )
  ENDIF(HAPTIONHAPI_DEBUG_LIBRARY)

  SET(HAPTIONHAPI_INCLUDE_DIR ${HAPTIONHAPI_INCLUDE_DIR} )
  SET(HAPTIONHAPI_LIBRARIES ${HAPTIONHAPI_LIBRARIES} )
ELSE(HAPTIONHAPI_INCLUDE_DIR AND HAVE_HAPTIONHAPI_LIBRARY)
  SET(HAPTIONHAPI_FOUND 0)
  SET(HAPTIONHAPI_LIBRARIES)
  SET(HAPTIONHAPI_INCLUDE_DIR)
ENDIF(HAPTIONHAPI_INCLUDE_DIR AND HAVE_HAPTIONHAPI_LIBRARY)

# Report the results.
IF(NOT HAPTIONHAPI_FOUND)
  SET(HAPTIONHAPI_DIR_MESSAGE
    "HAPTIONHAPI was not found. Make sure HAPTIONHAPI_LIBRARY ( and/or HAPTIONHAPI_DEBUG_LIBRARY ) and HAPTIONHAPI_INCLUDE_DIR are set.")
  IF(HAPTIONHAPI_FIND_REQUIRED)
    MESSAGE(FATAL_ERROR "${HAPTIONHAPI_DIR_MESSAGE}")
  ELSEIF(NOT HAPTIONHAPI_FIND_QUIETLY)
    MESSAGE(STATUS "${HAPTIONHAPI_DIR_MESSAGE}")
  ENDIF(HAPTIONHAPI_FIND_REQUIRED)
ENDIF(NOT HAPTIONHAPI_FOUND)
